@model IEnumerable<CarPartsAccounting.Models.sold_parts>

@{
    ViewBag.Title = "Список деталей";
}

<h2>Список деталей</h2>

<a type="button" style="margin: 0px 0px 20px;" href="@Url.Action("Create", "sold_parts")" class="btn btn-info">Добавить</a>

<table class="table table-striped">
    <tr>
        <th>
            Идентификатор продажи
        </th>
        <th>
            Количество
        </th>

        <th>
            Деталь
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.accounting.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.parts.part_name)
            </td>
            <td>
                <a type="button" href="@Url.Action("Edit", new { id = item.id })" class="btn btn-info">
                    <span>Редактировать</span>
                </a>
                <a type="button" href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger">
                    <span>Удалить</span>
                </a>
            </td>
        </tr>
    }

</table>
