@model CarPartsAccounting.Models.sold_parts

@{
    ViewBag.Title = "Добавление записи";
}

<h2>Добавление записи</h2>


@{Html.BeginForm();}
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Проданные детали</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="selling_id">Идентификатор продажи</label>
            <div class="col-md-10">
                @Html.DropDownList("selling_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.selling_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="part_id">Идентификатор детали</label>
            <div class="col-md-10">
                @Html.DropDownList("part_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.part_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="quantity">Количество</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
@{Html.EndForm();}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
