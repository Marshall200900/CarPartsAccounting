@model IEnumerable<CarPartsAccounting.Models.clients>

@{
    ViewBag.Title = "Клиенты";
}

<h2>Клиенты</h2>

<a type="button" style="margin: 0px 0px 20px;" href="@Url.Action("Create", "clients")" class="btn btn-info">Добавить</a>

<table class="table table-striped">
    <tr>
        <th>
            Имя клиента
        </th>
        <th>
            Скидка
        </th>
        <th>
            Номер телефона
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.client_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sales.sale_percent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phone_number)
            </td>
            <td>
                <a type="button" href="@Url.Action("Edit", new { id = item.id })" class="btn btn-info">
                    <span>Редактировать</span>
                </a>
                <a type="button" href="@Url.Action("Delete", new { id = item.id })" class="btn btn-danger">
                    <span>Удалить</span>
                </a>
            </td>
        </tr>
    }

</table>
